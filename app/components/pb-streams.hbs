<div class="row h-100 flex-fill m-0 p-0 bg-body" {{did-resize this.updateRowNr}}>
  <div class="col-12 h-100 flex-fill p-0 m-0 bg-body"> 
      {{!-- Stream listing --}}
      {{#unless this.currentUser.isViewing}}
        <div class="card h-100 flex-fill rounded-0">
          <div class="card-header">
            <div class="row">
              <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col px-1" as |form|>
                <form.element @controlType="text" class="w-100 my-0 mb-1" @property="query" {{on "keydown" this.resetPage}}  as |el|>
                  <el.control
                    placeholder="Filter Streams"
                    tabIndex={{5}}
                    class="w-100 m-0"
                  />
                </form.element>
              </BsForm>
              <div class="col-auto mx-1 ps-0 pe-2 px-lg-0">
                <BsButton @type="primary" @onClick={{@createStream}}>Add New</BsButton>
              </div>
            </div>
          </div>
          <div class="card-body mx-0 p-0 flex-fill h-100 overflow-hidden" id="bodycontainer">
            <div class="row mx-0 flex-fill listframe">
              <table class="table table-hover table-condensed col-12 my-0 px-0">
                <thead class="listheader thead-light">
                  <tr class="row g-0">
                    <th class="col col-sm-3 position-relative"><span class="position-absolute d-block text-truncate w-100">Date</span></th>
                    <th class="d-none d-sm-table-cell col-sm position-relative"><span class="position-absolute d-block text-truncate w-100">Stream</span></th>
                    <th class="col formcol stream-ctrls">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each this.pagedContent as |stream|}}  
                    <tr class="row g-0">
                      <td class="col col-sm-3 position-relative"><span class="position-absolute d-block text-truncate w-100">{{format-date stream.date}}</span></td>
                      <td class="d-none d-sm-table-cell col-sm position-relative"><span class="position-absolute d-block text-truncate w-100">{{if stream.title stream.title "untitled"}}</span></td>
                      <td class="col py-0 pe-0 formcol stream-ctrls">
                        <div class="btn-group">
                          <div class="row g-0 w-auto buttons">
                            <BsButton 
                              @type={{if stream.finished "outline-info alert alert-info" "outline-primary alert alert-primary"}}
                              class="rounded-0 col-auto border-top-0 border-bottom-0 border-end-0 py-2 my-0 px-0" 
                              @onClick={{fn @gridResumeStream stream}}
                            >
                              <FaIcon @icon={{if stream.finished "eye" "play"}} class="stream-status" />
                            </BsButton>
                            <button type="button" class="col-auto btn btn-outline-warning alert alert-warning border-top-0 border-bottom-0 border-end-0 rounded-0 py-2 px-0 m-0" {{on "click" (fn @gridEditStream stream)}}><FaIcon @icon="edit" /></button>
                            <ButtonConfirm @btnClass="btn btn-outline-danger alert alert-danger border-top-0 border-bottom-0 rounded-0 py-2 px-0 col-auto m-0" @btnIcon="trash" @btnText="" @confirmDescription="Are you sure you want to delete this stream?" @targetAction={{fn @gridDeleteStream stream}} />
                          </div>
                        </div>
                      </td>                      
                    </tr>       
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer py-0 my-0 px-0">
            <PageNumbers @content={{this.pagedContent}} />
          </div>
        </div>   
      {{/unless}}
      {{!-- Stream content --}}
    {{#if this.currentUser.isViewing}}
      {{yield}} 
    {{/if}}
  </div>    
</div>
{{did-insert this.updateRowNr}}