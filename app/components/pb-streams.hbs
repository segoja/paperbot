<div class="row h-100 flex-fill m-0 p-0">
  <div class="col-12 h-100 flex-fill p-0 m-0"> 
      {{!-- Stream listing --}}
      {{#unless this.currentUser.isViewing}}
        <div class="card h-100 flex-fill">
          <div class="card-header">
            <div class="row">
              <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-12 col-sm px-1" as |form|>
                <form.element @controlType="text" class="w-100 my-0 mb-1" @property="query" {{on "keydown" this.resetPage}}  as |el|>
                  <el.control
                    placeholder="Filter Streams"
                    tabIndex={{5}}
                    class="w-100 m-0"
                  />
                </form.element>
              </BsForm>
              <div class="col-lg-auto col-12 mx-1 ps-0 pe-2 px-lg-0">
                <BsButton @type="primary" @onClick={{@createStream}}>Add New</BsButton>
              </div>
            </div>
          </div>
          <div class="card-body mx-0 p-0 flex-fill h-100 overflow-hidden">
            <div class="row mx-0 flex-fill listframe">
              <table class="table table-hover table-condensed col-12 my-0 px-0">
                <thead class="listheader thead-light">
                  <tr><th class="col-sm">Stream</th><th class="col-sm-auto">Date</th><th class="col-sm-auto"></th></tr>
                </thead>
                <tbody>
                  {{#each this.pagedContent as |stream|}}  
                    <tr>
                      <td class="col-sm align-top">{{if stream.title stream.title "untitled"}}</td>
                      <td class="col-sm-auto align-top"><span class="text-nowrap">{{format-date stream.date }}</span></td>
                      <td class="col-auto py-0 pe-0">
                        <div class="row g-0">
                          <div class="col-auto ms-auto btn-group my-0">
                            <button type="button" class="btn rounded-0 py-2 px-3 {{if stream.finished "btn-outline-info alert-info" "btn-outline-warning alert-warning"}}" {{on "click" (fn @gridResumeStream stream)}}><FaIcon @icon={{if stream.finished "eye" "play"}} /></button>
                            <button type="button" class="btn btn-outline-secondary rounded-0 py-2 px-3 alert-secondary" {{on "click" (fn @gridEditStream stream)}}><FaIcon @icon="edit" /></button>
                            <ButtonConfirm @btnClass="btn btn-outline-danger rounded-0 py-2 px-3 alert-danger" @btnIcon="trash" @btnText="" @confirmDescription="Are you sure you want to delete this stream?" @targetAction={{fn @gridDeleteStream stream}} />
                          </div>
                        </div>
                      </td>                      
                    </tr>       
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer py-0 my-0 px-0">
            <PageNumbers @content={{this.pagedContent}} />
          </div>
        </div>   
      {{/unless}}
      {{!-- Stream content --}}
    {{#if this.currentUser.isViewing}}
      {{yield}} 
    {{/if}}
  </div>    
</div>
