<div class="container-fluid">
  <div class="row">
    {{!-- blog post listing --}}
    <div class="col-xs-8">
      <button type="button" {{on "click" @createPost}}>Create</button> <Input @type="text" @value={{@queryParamsObj.query}} placeholder="Filter Posts" @autofocus="autofocus" @keyDown={{this.resetPage}} />
      <table class="table">
        <thead>
          <tr><th>Stream list</th></tr>
        </thead>
        <tbody>
          {{#each this.pagedContent as |post|}}
            <tr>
              <td>
                <LinkTo @route="posts.post" @model={{post}} @messages={{@messages}}>
                  {{post.title}} <small class="muted">by {{post.author.name}}</small>
                </LinkTo>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table> 
      <PageNumbers @content={{this.pagedContent}} />
      <SongQueue class="col-xs-5" />
      <TwitchChat class="col-xs-5" />
    </div>
    {{!-- blog post content --}}
    <div class="col-xs-4">
      {{yield}}
    </div>
  </div>
</div>
