<div class="row h-100 flex-fill m-0 p-0">
  <div class="col-12 h-100 flex-fill p-0 m-0"> 
      {{!-- song listing --}}
      <div class="{{if this.currentUser.isViewing "d-none" "card h-100 flex-fill"}}">
        <div class="card-header">
          <div class="row">
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-md col-sm-6 col-12 px-1"  as |form|>
              <form.element @controlType="text" class="w-100 my-0 mb-1" @property="query" {{on "keydown" this.resetPage}} as |el|>
                <el.control
                  placeholder="Filter by title"
                  tabIndex={{5}}
                  class="w-100 m-0"
                />
              </form.element>
            </BsForm>
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-md-auto col-sm-6 col-12 px-1" as |form|>
              <form.element @controlType="power-select" @property="type" class="w-100 my-0 mb-1" @options={{@songTypes}} @onChange={{this.resetPage}} as |element| >
                <element.control  @triggerClass="w-100 m-0" @allowClear={{true}} @placeholder="Filter by type" class="w-100" as |option|>
                  <span class="w-100" >{{option}}</span>
                </element.control>
              </form.element>
            </BsForm>
            <div class="col-lg-auto col-12 mx-1 ps-0 pe-2 px-lg-0">
              <PbSongImport @songTypes={{@songTypes}} />
              <BsButton @type="secondary" @onClick={{fn this.songImport}}>Import</BsButton>
              <BsButton @type="secondary" @onClick={{fn this.songExportFiltered}}>Export</BsButton>
              <BsButton @type="info" @onClick={{fn @createSong}}>Add New</BsButton>
              {{!-- <BsButton @type="info" @onClick={{fn @udpdateRest}}>Cloud Sync</BsButton> --}}
            </div>
          </div>
        </div>
        <div class="card-body mx-0 p-0 flex-fill h-100 overflow-hidden" id="bodycontainer">
          <div class="row mx-0 flex-fill listframe">
            <table class="table table-striped table-condensed col-12 my-0 px-0">
              <thead class="listheader thead-light">
                <tr class="col">
                  <th scope="col" class="col-sm">Song</th>
                  <th scope="col" class="col-sm">Artist</th>
                  <th scope="col" class="d-none d-lg-table-cell col-md">Type</th>
                  <th scope="col" class="d-none d-lg-table-cell col-md">Played</th>
                  <th scope="col" class="d-none d-lg-table-cell col-md">Requested</th>
                  <th scope="col" class="d-none d-lg-table-cell col-md">Last request</th>
                  <th scope="col" class="col-sm"></th>
                </tr>
              </thead>
              <tbody id="preheight">
                {{#each this.pagedContent as |song|}}            
                  <tr>
                    <td class="col-sm align-top">{{if song.title song.title "<unntitled>"}}</td>
                    <td class="col-sm align-top">{{song.artist}}</td>
                    <td class="d-none d-lg-table-cell col-md align-top">{{song.type}}</td>
                    <td class="d-none d-lg-table-cell col-md align-top">{{song.times_played}}</td>
                    <td class="d-none d-lg-table-cell col-md align-top">{{song.times_requested}}</td>
                    <td class="d-none d-lg-table-cell col-md align-top">{{song.last_request}}</td>
                    <td class="col-auto py-0 pe-0">
                      <div class="row g-0">
                        <div class="col-auto ms-auto btn-group my-0">
                          <button type="button" class="btn btn-outline-secondary alert-secondary rounded-0 py-2 px-3" {{on "click" (fn @gridEditSong song)}}><FaIcon @icon="edit" /></button>
                          <button type="button" class="btn btn-outline-danger alert-danger rounded-0 py-2 px-3" {{ on "click" (fn @gridDeleteSong song)}}><FaIcon @icon="trash" /></button>
                        </div>
                      </div>
                    </td>
                  </tr>            
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer py-0 my-0 px-0">
          <PageNumbers @content={{this.pagedContent}} />
        </div>
      </div>
    {{#if this.currentUser.isViewing}}
      {{!-- Song content --}}
      {{yield}}
    {{/if}}
  </div>
</div>