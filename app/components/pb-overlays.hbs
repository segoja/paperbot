<div class="row h-100 flex-fill m-0 p-0 bg-body">
  <div class="col-12 h-100 flex-fill p-0 m-0 bg-body"> 
      {{!-- overlay listing --}}
      <div class="{{if this.currentUser.isViewing "d-none" "card h-100 flex-fill rounded-0"}}">
        <div class="card-header">
          <div class="row">          
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-12 col-sm px-1" as |form|>
              <form.element @controlType="text" class="w-100 my-0 mb-1" @property="query" {{on "keydown" this.resetPage}}  as |el|>
                <el.control
                  placeholder="Filter Overlays"
                  tabIndex={{5}}
                  class="w-100 m-0"
                />
              </form.element>
            </BsForm>
            <div class="col-lg-auto col-12 mx-1 ps-0 pe-2 px-lg-0">
              <div class="d-block float-end text-end">
                {{#let (file-queue name="uploadOverlaysCSV" onFileAdded=this.overlayImport) as |queue|}}
                  <label type="button" for="upload-csv" class="btn btn-secondary" title="Import overlays by CSV">Import</label>  
                  <input
                    type="file"
                    id="upload-csv"
                    accept="text/csv"
                    class="p-0 m-0"
                    hidden
                    {{queue.selectFile}}
                  >
                {{/let}}
              
                <BsButton @type="secondary" @onClick={{this.overlayExportFiltered}}>Export</BsButton>
                <BsButton @type="primary" @onClick={{@createOverlay}}>Add New</BsButton>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body mx-0 p-0 flex-fill h-100 overflow-hidden">
          <div class="row mx-0 flex-fill listframe">
            <table class="table table-condensed table-striped my-0 px-0">
              <thead class="listheader thead-light">
                <tr>
                  <th scope="col" class="col col-md-auto">Overlay</th>
                  <th scope="col" class="col-auto col-md" colspan="2"><span class="d-none d-sm-inline">Channel</span></th>
                </tr>
              </thead>
              <tbody>
                {{#each this.pagedContent as |overlay|}}            
                  <tr>
                    <td class="col col-md-auto">{{if overlay.name overlay.name "<unnamed>"}}</td>
                    <td class="col-auto py-0 pe-0 formcol">
                      <div class="btn-group text-nowrap float-end">
                        <button type="button" class="col-auto btn btn-outline-warning alert alert-warning border-top-0 border-bottom-0 border-end-0 rounded-0 py-2 px-0 m-0" {{on "click" (fn @gridEditOverlay overlay)}}><FaIcon @icon="edit" /></button>
                        <ButtonConfirm @btnClass="btn btn-outline-danger alert alert-danger border-top-0 border-bottom-0 rounded-0 py-2 px-0 col-auto m-0" @btnIcon="trash" @btnText="" @confirmDescription="Are you sure you want to delete this overlay?" @targetAction={{fn @gridDeleteOverlay overlay}} />
                      </div>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer py-0 my-0 px-0">
          <PageNumbers @content={{this.pagedContent}} />
        </div>
      </div>
    {{#if this.currentUser.isViewing}}
      {{!-- Overlay content --}}
      {{yield}}
    {{/if}}
  </div>
</div>

