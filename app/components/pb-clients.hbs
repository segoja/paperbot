<div class="row h-100 flex-fill m-0 p-0">
  <div class="col-12 h-100 flex-fill p-0 m-0"> 
      {{!-- client listing --}}
      <div class="{{if @isViewing "d-none" "card h-100 flex-fill"}}">
        <div class="card-header">
          <div class="row">          
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-12 col-sm px-1" @onchange={{this.resetPage}} as |form|>
              <form.element @controlType="text" class="w-100 my-0 mb-1" @property="query" as |el|>
                <el.control
                  placeholder="Filter Clients"
                  tabIndex={{5}}
                  class="w-100 m-0"
                />
              </form.element>
            </BsForm>
            <div class="col-lg-auto col-12 mx-1 pl-0 pr-2 px-lg-0">
              <FileUpload @name="importfile" @accept=".csv" @onfileadd={{fn this.clientImport}} hidden={{false}} class="my-0"><span class="btn btn-secondary ember-view">Import</span></FileUpload>
              <BsButton @type="secondary" @onClick={{fn this.clientExportFiltered}}>Export</BsButton>
              <BsButton @type="info" @onClick={{fn @createClient}}>Add New</BsButton>
            </div>
          </div>
        </div>
        <div class="card-body mx-0 p-0 flex-fill d-flex h-100 overflow-hidden">
          <div class="row mx-0 flex-fill d-flex h-100 listframe">
            <table class="table table-hover table-condensed col-12 my-0 px-0">
              <thead class="listheader thead-light">
                <tr class="w-100">
                  <th scope="col" class="col-sm">Client</th>
                  <th scope="col" class="col-sm">Channel</th>
                  <th scope="col" class="col-sm-auto">Admin</th>
                </tr>
              </thead>
              <tbody>
                {{#each this.pagedContent as |client|}}            
                  <LinkTo @route="clients.client" @model={{client}} @tagName="tr" class="w-100">
                    <td class="col-sm-auto align-top">{{if client.username client.username "<unnamed>"}}</td>
                    <td class="col-sm align-top">{{client.channel}}</td>
                    <td class="col-sm-auto align-top">
                      <BsButtonGroup class="mx-auto" as |bg|>
                        <bg.button @type="" class="btn-sm btn-outline-secondary h-100 alert-secondary" @onClick={{fn @gridEditClient client}}><FaIcon @icon="edit" /></bg.button>
                        <bg.button @type="" class="btn-sm btn-outline-danger h-100 alert-danger" @onClick={{fn @gridDeleteClient client}}><FaIcon @icon="trash" /></bg.button>
                      </BsButtonGroup>
                    </td>
                  </LinkTo>            
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer py-0 my-0">
          <PageNumbers @content={{this.pagedContent}} />
        </div>
      </div>
    {{#if @isViewing}}
      {{!-- Client content --}}
      {{yield}}
    {{/if}}
  </div>
</div>

