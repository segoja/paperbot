<div class="row h-100 flex-fill m-0 p-0 bg-body" {{did-resize this.updateRowNr}}>
  <div class="col-12 h-100 flex-fill p-0 m-0 bg-body"> 
      {{!-- client listing --}}
      <div class="{{if this.currentUser.isViewing "d-none" "card h-100 flex-fill rounded-0"}}">
        <div class="card-header">
          <div class="row">          
            <div class="col-12 col-sm px-1">
              <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="w-100" as |form|>
                <div class="row g-0 flex-nowrap">
                  <form.element @controlType="text" class="col my-0 mb-1" @property="query" {{on "keydown" this.resetPage}} as |el|>
                    <el.control
                      placeholder="Search by client username or channel"
                      tabIndex={{5}}
                      class="w-100 m-0 rounded-end-0"
                    />
                  </form.element>  
                  <div class="col-auto">
                    <BsButton @type="secondary rounded-start-0" @onClick={{this.clearSearch}} disabled={{not @queryParamsObj.query}} title="Clear search">
                      <FaIcon @icon="cancel" />
                    </BsButton>
                  </div>
                </div>
              </BsForm>
            </div>
            <div class="col-sm-auto col-12 mx-1 ps-0 pe-2 px-lg-0">
              <div class="d-block float-end text-end">
                {{#let (file-queue name="uploadClientsCSV" onFileAdded=this.clientImport) as |queue|}}
                  <label type="button" for="upload-csv" class="btn btn-secondary" title="Import clients by CSV">Import</label>  
                  <input
                    type="file"
                    id="upload-csv"
                    accept="text/csv"
                    class="p-0 m-0"
                    hidden
                    {{queue.selectFile}}
                  >
                {{/let}}
              
                <BsButton @type="secondary" @onClick={{this.clientExportFiltered}} title="Export clients to CSV">Export</BsButton>
                <BsButton @type="primary" @onClick={{@createClient}} title="Add a new client">Add New</BsButton>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body mx-0 p-0 flex-fill h-100 overflow-hidden" id="bodycontainer">
          <div class="row mx-0 flex-fill listframe">
            <table class="table table-condensed table-hover col-12 my-0 px-0">
              <thead class="listheader thead-light">
                <tr class="row g-0">
                  <th scope="col" class="col position-relative">
                    <span role="button" class="position-absolute d-block text-truncate w-100" {{on "click" (fn this.sortColumn "username")}}>Username</span>
                  </th>
                  <th scope="col" class="d-none d-sm-table-cell col-sm-4 position-relative" {{on "click" (fn this.sortColumn "channel")}}>
                    <span role="button" class="position-absolute d-block text-truncate w-100">Channel</span>
                  </th>
                  <th scope="col" class="col formcol client-ctrls">Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each this.pagedContent as |client|}}            
                  <tr class="row g-0">
                    <td class="col position-relative"><span class="position-absolute d-block text-truncate w-100">{{if client.username client.username "<unnamed>"}}</span></td>
                    <td class="d-none d-sm-table-cell col-sm-4 position-relative"><span class="position-absolute d-block text-truncate w-100">{{client.channel}}</span></td>
                    <td class="col py-0 pe-0 formcol client-ctrls text-end">
                      <div class="btn-group">
                        <div class="row g-0 buttons">
                          <button type="button" class="col-auto btn btn-outline-warning alert alert-warning border-top-0 border-bottom-0 border-end-0 rounded-0 py-2 px-0 m-0" {{on "click" (fn @gridEditClient client)}} title="Edit client"><FaIcon @icon="edit" /></button>
                          <ButtonConfirm @btnClass="btn btn-outline-danger alert alert-danger border-top-0 border-bottom-0 rounded-0 py-2 px-0 col-auto m-0" @btnIcon="trash" @btnText="" @buttonTitle="Delete client" @confirmDescription="Are you sure you want to delete this client?" @targetAction={{fn @gridDeleteClient client}} />
                        </div>
                      </div>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer py-0 my-0 px-0">
          <PageNumbers @content={{this.pagedContent}} />
        </div>
      </div>
    {{#if this.currentUser.isViewing}}
      {{!-- Client content --}}
      {{yield}}
    {{/if}}
  </div>
</div>
{{did-insert this.updateRowNr}}