<div class="row h-100 flex-fill m-0 p-0">
  <div class="col-12 h-100 flex-fill p-0 m-0"> 
      {{!-- command listing --}}
      <div class="{{if @isViewing "d-none" "card h-100 flex-fill"}}">
        <div class="card-header">
          <div class="row">
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-md col-sm-6 col-12 px-1" as |form|>
              <form.element @controlType="text" class="w-100 my-0 mb-1" @property="query" {{on "keydown" this.resetPage}} as |el|>
                <el.control
                  placeholder="Filter by name"
                  tabIndex={{5}}
                  class="w-100 m-0"
                />
              </form.element>
            </BsForm>
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-md-auto col-sm-6 col-12 px-1" as |form|>
              <form.element @controlType="power-select" @property="type" class="w-100 my-0 mb-1" @options={{@commandTypes}} @onchange={{this.resetPage}} as |element| >
                <element.control  @triggerClass="w-100 m-0" @allowClear={{true}} @placeholder="Filter by type" class="w-100" as |option|>
                  <span class="w-100">{{option}}</span>
                </element.control>
              </form.element>
            </BsForm>
            <div class="col-lg-auto col-12 mx-1 ps-0 pe-2 px-lg-0">             
              <BsButton @type="secondary" @onClick={{fn this.commandImport}}>Import</BsButton>
              <BsButton @type="secondary" @onClick={{fn this.commandExportFiltered}}>Export</BsButton>
              <BsButton @type="info" @onClick={{fn @createCommand}}>Add New</BsButton>
            </div>
          </div>
        </div>
        <div class="card-body mx-0 p-0 flex-fill h-100 overflow-hidden">
          <div class="row mx-0 flex-fill listframe">
            <table class="table table-condensed table-striped col-12 my-0 px-0">
              <thead class="listheader thead-light">
                <tr class="w-100">
                  <th scope="col" class="col col-lg-auto">Command</th>
                  <th scope="col" class="d-none d-lg-table-cell col-lg">Response</th>
                  <th scope="col" colspan="2" class="col-auto col-md">Type</th>
                </tr>
              </thead>
              <tbody>
                {{#each this.pagedContent as |command|}}
                  <tr>
                    <td class="col col-lg-auto">{{if command.name command.name "unnamed"}}</td>
                    <td class="d-none d-lg-table-cell col-lg"><small class="muted">{{command.response}}</small></td>
                    <td class="col-sm">{{command.type}}</td>
                    <td class="col-auto py-0 pe-0">
                      <div class="row g-0">
                        <div class="col-auto ms-auto btn-group my-0">
                          <button role="button" class="btn btn-outline-secondary rounded-0 py-2 px-3 alert-secondary" {{on "click" (fn @gridActiveCommand command)}}>
                            <FaIcon class="text-secondary" @icon="{{if command.active "check-square" "square"}}" />
                          </button>
                          <button type="button" class="btn btn-outline-secondary rounded-0 py-2 px-3 alert-secondary" {{on "click" (fn @gridEditCommand command)}}><FaIcon @icon="edit" /></button>
                          <button type="button" class="btn btn-outline-danger rounded-0 py-2 px-3 alert-danger" {{ on "click" (fn @gridDeleteCommand command)}}><FaIcon @icon="trash" /></button>
                        </div>
                      </div>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer py-0 my-0 px-2">
          <PageNumbers @content={{this.pagedContent}} />
        </div>
      </div>
    {{#if @isViewing}}
      {{!-- Command content --}}
      {{yield}}
    {{/if}}
  </div>
</div>

