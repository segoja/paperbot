<div class="row h-100 flex-fill m-0 pt-3 pb-0 px-0">
  <div class="col-12 h-100 flex-fill p-0 m-0"> 
      {{!-- command listing --}}
      <div class="{{if @isViewing "d-none" "card h-100 flex-fill"}}">
        <div class="card-header">
          <div class="row">
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-md col-sm-6 col-12 px-1" @onchange={{this.resetPage}} as |form|>
              <form.element @controlType="text" class="w-100 my-0 mb-1" @property="query" as |el|>
                <el.control
                  placeholder="Filter by name"
                  tabIndex={{5}}
                  class="w-100 m-0"
                />
              </form.element>
            </BsForm>
            <BsForm @model={{@queryParamsObj}} @formLayout="inline" class="col-md-auto col-sm-6 col-12 px-1" @onchange={{this.resetPage}} as |form|>
              <form.element @controlType="power-select" @property="type" class="w-100 my-0 mb-1" @options={{@commandTypes}} as |element| >
                <element.control  @triggerClass="w-100 m-0" @allowClear={{true}} @placeholder="Filter by type" class="w-100" as |option|>
                  <span class="w-100">{{option}}</span>
                </element.control>
              </form.element>
            </BsForm>
            <div class="col-auto mx-1 px-0 float-right">
              <FileUpload @name="importfile" @accept=".csv" @onfileadd={{fn this.commandImport}} hidden={{false}} class="my-0"><span class="btn btn-secondary ember-view">Import</span></FileUpload>
              <BsButton @type="secondary" @onClick={{fn this.commandExportFiltered}}>Export</BsButton>
              <BsButton @type="info" @onClick={{fn @createCommand}}>Add New</BsButton>
            </div>
          </div>
        </div>
        <div class="card-body mx-0 p-0 flex-fill d-flex h-100 overflow-hidden">
          <div class="row mx-0 flex-fill d-flex h-100 overflow-hidden">
            <table class="table table-hover table-condensed col-12 my-0 h-100 flex-fill d-flex flex-column px-0">
              <thead class="w-100">
                <tr class="w-100">
                  <th scope="col" class="col col-lg-auto">Command</th>
                  <th scope="col" class="d-none d-lg-table-cell col-lg">Response</th>
                  <th scope="col" class="col-sm-auto">Type</th>
                  <th scope="col" class="col-sm">Active</th>
                  <th scope="col" class="col-sm">Admin</th></tr>
              </thead>
              <tbody class="listframe">
                {{#each this.pagedContent as |command|}}
                  <LinkTo @route="commands.command" @tagName="tr" class="w-100" @model={{command}}>                
                      <td class="col col-lg-auto">{{if command.name command.name "unnamed"}}</td>
                      <td class="d-none d-lg-table-cell col-lg"><small class="muted">{{command.response}}</small></td>
                      <td class="col-sm text-right">{{command.type}}</td>
                      <td class="col-sm">
                        <BsButton @type="" class="btn-link btn-md mx-auto py-0 my-0 self-align-center" @onClick={{fn @gridActiveCommand command}}>
                          <FaIcon class="text-secondary" @icon="{{if command.active "check-square" "square"}}" />
                        </BsButton>
                      </td>
                      <td class="col-sm">
                        <BsButtonGroup @class="mx-auto" as |bg|>
                          <bg.button @type="" class="btn-sm alert-secondary" @onClick={{fn @gridEditCommand command}}><FaIcon @icon="edit" /></bg.button>
                          <bg.button @type="" class="btn-sm alert-danger" @onClick={{fn @gridDeleteCommand command}}><FaIcon @icon="trash" /></bg.button>
                        </BsButtonGroup>
                      </td>
                  </LinkTo>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer">
          <PageNumbers @content={{this.pagedContent}} />
        </div>
      </div>
    {{#if @isViewing}}
      {{!-- Command content --}}
      {{yield}}
    {{/if}}
  </div>
</div>

