          <tr><td>Channel:</td><td>{{@client.channel}}</td></tr>
          <tr><td>Debug:</td><td>{{@client.debug}}</td></tr>
          <tr><td>Reconnect:</td><td>{{@client.reconnect}}</td></tr>
